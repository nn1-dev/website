---
interface Props {
  label: string;
  name: string;
  placeholder?: string;
  required?: boolean;
}

const { label, required, name, placeholder } = Astro.props;
---

<div class="input">
  <label class="input__label" for={name}
    >{label} {required ? "(required)" : "(optional)"}</label
  >
  <textarea
    class="input__field"
    name={name}
    id={name}
    rows="3"
    placeholder={placeholder}></textarea>
</div>

<style>
  .input {
  }

  .input__label {
    font-weight: 600;
    display: block;
    margin-block-end: calc(var(--lh) / 4);
  }

  .input__field {
    display: block;
    font: inherit;
    width: 100%;
    padding-block: calc(var(--lh) / 4);
    padding-inline: calc(var(--lh) / 3);
    border-radius: 4px;
    border: none;
    resize: vertical;
    box-shadow:
      0 0 0 1px var(--color-border),
      0 0 0 4px var(--color-border-light);
    background-color: light-dark(var(--color--bg), var(--color-border));

    &:focus,
    &:hover {
      outline: 2px solid var(--color-accent);
      outline-offset: 2px;
    }
  }
</style>
